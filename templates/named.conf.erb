//
// See the BIND Administrator's Reference Manual (ARM) for details about the
// configuration located in /usr/share/doc/bind-{version}/Bv9ARM.html

options {
	<% @LISTENON.keys.each do |p| %>
	
	listen-on port <%= p%> { <%@LISTENON[p].each do |ip|%> <%= ip%>;<%end%> };
	<%end%>
	//listen-on-v6 port 53 { ::1 };
	directory 	"<%=@node['bind9dns']['options']['directory']%>";
	dump-file 	"<%=@node['bind9dns']['options']['directory']%>/data/cache_dump.db";
	statistics-file "<%=@node['bind9dns']['options']['directory']%>/data/named_stats.txt";
	memstatistics-file "<%=@node['bind9dns']['options']['directory']%>/data/named_mem_stats.txt";
	allow-query     { <%@ALLOW_QUERY.each do |q| %><%=q%>;<%end%> };

	/* 
	 - If you are building an AUTHORITATIVE DNS server, do NOT enable recursion.
	 - If you are building a RECURSIVE (caching) DNS server, you need to enable 
	   recursion. 
	 - If your recursive DNS server has a public IP address, you MUST enable access 
	   control to limit queries to your legitimate users. Failing to do so will
	   cause your server to become part of large scale DNS amplification 
	   attacks. Implementing BCP38 within your network would greatly
	   reduce such attack surface 
	*/
	recursion <%=@RECURSION ? 'yes' : 'no'%>;

	dnssec-enable <%=@DNSSEC_ENABLE? 'yes' : 'no'%>;
	dnssec-validation <%=@DNSSEC_VALIDATION? 'yes' : 'no'%>;

	/* Path to ISC DLV key */
	bindkeys-file "<%=@BINDKEYS_FILE%>";

	managed-keys-directory "<%=@MANGED_KEYS_DIR%>";

	pid-file "<%=@PID_FILE%>";
	session-keyfile "<%= @SESSION_KEYFILE%>";
};

logging {
        channel default_debug {
                file "data/named.run";
                severity dynamic;
        };
};

<% @ACLs.each do |acl|%>
acl "<%= acl.name %>" {
  <% acl.nets.each do |net| %>
    <%= net%>;
  <% end %>
};
<% end %>

<% @ZONES.each do |z|%>
zone "<%=z.name%>" IN {
	type <%=z.type%>;
	<%if z.type == 'forward' then%>
	forward <%=z.forward%>;
	forwarders {<%z.forwarders.each do |f|%> <%=f%>;<%end%>};
	<%else%>
	file "<%=z.file %>";
	<%end%>
};
<%end%>

include "/etc/named.rfc1912.zones";
include "/etc/named.root.key";
